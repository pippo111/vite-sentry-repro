{
  "extends": "../common/config/tsc.base.json",
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "WebWorker"
    ],
    "types": [
      "vite/client"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "./src",
    "**/*spec.ts",
  ]
}
